---
const personalImageAlt = "Roger Montes Ortega";
import Badge from "@/components/Badge.astro";
import LinkedInIcon from "@/components/icons/LinkedIn.astro";
import MailIcon from "@/components/icons/Mail.astro";
import SocialPill from "@/components/SocialPill.astro";
---

<div class="max-w-xl">
  <div class="flex gap-4 mb-4">
    <img
      class="rounded-full shadow-lg size-16"
      src="/rogerphoto.jpg"
      alt={personalImageAlt}
    />
    <a
      href="https://www.linkedin.com/in/roger-montes-ortega-7821b4248/"
      target="_blank"
      rel="noopener"
      class="flex items-center transition md:justify-center md:hover:scale-105"
    >
      <Badge>Abierto a nuevas oportunidades</Badge>
    </a>
  </div>
  <h1
    class="text-4xl font-bold tracking-tight text-gray-800 sm:text-5xl dark:text-white"
  >
    ¡Hola! Soy Roger Montes.
  </h1>
  <p
    class="mt-6 text-xl text-gray-800 dark:[&>strong]:text-yellow-300 [&>strong]:text-yellow-500 [&>strong]:font-semibold dark:text-gray-300 text-pretty"
  >
    <strong>Ingeniero de Software especializado en Desarrollo Web</strong>. Más
    de 2 años de experiencia creando e implementando experiencias digitales con
    React, Next.js, Node.js, Laravel y PHP.
  </p>
  <nav class="flex flex-wrap gap-4 mt-8">
    <SocialPill href="mailto:rogerxmontes@gmail.com">
      <MailIcon class="size-4" />
      Contáctame
    </SocialPill>
    <SocialPill
      href="https://www.linkedin.com/in/roger-montes-ortega-7821b4248/"
    >
      <LinkedInIcon class="size-4" />
      LinkedIn
    </SocialPill>
  </nav>
</div>
